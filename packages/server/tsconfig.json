{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/apps/*": ["src/apps/*"],
      "@app/configs/*": ["src/configs/*"],
      "@app/core/*": ["src/core/*"],
      "@app/globals/*": ["src/globals/*"],
      "@app/utils/*": ["src/utils/*"],
      "@app/entities/*": ["src/entities/*"]
    }
  }
}
