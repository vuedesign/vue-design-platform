{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Node",
        "strict": true,
        "allowJs": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node", "vite/client", "element-plus/global"],
        "baseUrl": "./",
        "paths": {
            "@": ["src"],
            "@/*": ["src/*"]
            // "@/core": ["@/core/index"]
            // "@/core": ["src/core"],
            // "@/core/*": ["src/core/*"]
            // "@/configs/*": ["src/configs/*"]
            // "@/configs/routes": ["./src/configs/routes"]
        }
    },
    "include": [
        "./src/**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.js",
        "./src/**/*.vue"
    ],
    "exclude": ["node_modules", "dist"],
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": true
    }
}
