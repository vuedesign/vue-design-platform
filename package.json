{
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean": "npx rimraf ./node_modules ./packages/**/node_modules",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "fs-extra": "^10.0.0",
    "rimraf": "^3.0.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.3.2",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,.css,.scss}": "prettier --write",
    "./packages/client-web-next/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "./packages/client-admin/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "./packages/server-admin/src/**/*.{ts,js}": [
      "eslint --fix"
    ],
    "./packages/server-web/src/**/*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
